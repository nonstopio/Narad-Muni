{
  "name": "narada-app",
  "version": "1.7.0",
  "productName": "Narad Muni",
  "description": "Voice-first productivity platform â€” record once, publish to Slack, Teams, and Jira",
  "author": {
    "name": "NonStop IO",
    "url": "https://nonstopio.com"
  },
  "homepage": "https://github.com/nonstopio/Narad-Muni",
  "repository": {
    "type": "git",
    "url": "https://github.com/nonstopio/Narad-Muni.git"
  },
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "pkill -f 'next dev' 2>/dev/null; rm -f .next/dev/lock && next dev --port 3947",
    "build": "next build",
    "start": "next start --port 3947",
    "lint": "eslint",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma db push --force-reset && tsx prisma/seed.ts",
    "mcp:compile": "tsc -p mcp/tsconfig.json",
    "mcp:dev": "npm run mcp:compile && node dist-mcp/server.js",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "npm run electron:compile && node electron/dev-start.js",
    "electron:build": "npm run build && cp -r .next/static .next/standalone/.next/static && cp -r public .next/standalone/public && npm run electron:compile && npm run mcp:compile && electron-builder",
    "postinstall": "electron-builder install-app-deps && node scripts/sign-native-modules.js",
    "electron:resign": "node scripts/sign-native-modules.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@deepgram/sdk": "^4.11.3",
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.27.1",
    "@prisma/client": "^6.19.2",
    "better-sqlite3": "^11.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "detect-port": "^2.0.0",
    "fix-path": "^4.0.0",
    "framer-motion": "^11.18.2",
    "lottie-react": "^2.4.1",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "node-schedule": "^2.1.1",
    "parse-duration": "^2.1.5",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^20",
    "@types/node-schedule": "^2.1.8",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.0.0",
    "dotenv": "^17.2.4",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "prisma": "^6.19.2",
    "shadcn": "^3.8.4",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "5.9.3",
    "wait-on": "^8.0.0"
  }
}
